
  <view class="container">

    <view catchtap="go"  wx:if="{{notifNum > 0}}" class="center" style="opacity:0.5;z-index:10;height:40px; width:40px; position: fixed; right: 10px; top: 10px;background-color:red; border-radius:100%;" data-wpygo-a="notificationPage">
      <text style="color:white;">66</text>
    </view>

    <view catchtap="editStatus" class="bg-img center" style="z-index:10;box-shadow:0 0 2px rgb(32, 190, 236);height:60px;width:60px;border-radius:100%;position:fixed;right:10px;bottom:20px;" catchlongpress="longpress">
      <image src="../assets/img/plus2.png" style="width:30px;height:30px;"/>
    </view>


     <view style="margin-bottom:20px;width:{{screenWidth - 20}}px;padding:10px;background-color:white;border-bottom: 1px solid rgb(232,232,232);padding-bottom:0;">
       <view style="display: flex;">
         <view style="flex:2;">
           <image src="../assets/img/boy.jpeg" style=" border-radius:100%;width:50px; height:50px;"/>
         </view>
         <view style="flex:8;">
           <view class="center" style="justify-content:flex-start;">
             <text>{{myData.nickName}}</text>
             <image src="../assets/img/male.png" style="padding:0 5px;width:20px; height:20px;"/>
             <!-- <view class="center" style="padding:0 6px;border-radius:10px;background-color:rgb(249,198,45)">
               <text style="color:white;font-size:12px;">Lv5</text>
             </view> -->
           </view>
           <view style="font-size:12px;opacity:0.6;">
             {{myData.createdAt}}
           </view>
         </view>
         <view catchtap="moreOption">
           <image src="../assets/img/more.png" style="opacity:0.3;position:absolite;right:10px;width:30px; height:30px;"/>
         </view>
       </view>
       <view>
         <!-- <text style="color:rgb(95,112,139)">#主题跳转#</text> -->
         <text>{{myData.msg}}</text>
       </view>
       <view style="padding:10px 0;">
         <block wx:for="{{myData.imgUrls}}" wx:for-index="index" wx:for-item="item" wx:key="index">
          <image mode="aspectFill" catchtap="previewImage" src="{{item}}" style="padding:{{index%3 == 1 ? '0 5px': ''}};width:{{(screenWidth -30)/3}}px; height:{{screenWidth/3}}px;" data-wpypreviewimage-a="{{ item }}" data-wpypreviewimage-b="{{ myData.imgUrls }}"/>
         </block>
       </view>
       <view class="center" style="justify-content: space-around;border-top: 1px dashed rgb(232,232,232)">
         <!-- <view class="center" style="padding: 10px 0;">
           <image src="../assets/img/share.png" style="width:20px; height:20px;padding-right:10px;"/>
           <text style="font-size:15px; opacity:0.6;">转发</text>
         </view> -->
         <view class="center" style="padding: 10px 0;">
           <image src="../assets/img/comment.png" style="width:20px; height:20px;padding-right:10px;"/>
           <text style="font-size:15px; opacity:0.6;">{{myData.commentsNum}}</text>
         </view>
         <view class="center" style="padding: 10px 0;">
           <image src="../assets/img/like.png" style="width:20px; height:20px;padding-right:10px;"/>
           <text style="font-size:15px; opacity:0.6;">{{myData.likesNum}}</text>
         </view>
       </view>
     </view>

     <!-- comments -->
     <view style="width:100%;padding:0 10px;box-sizing: border-box;">
       <view style="padding: 10px 0;border-bottom:1px solid rgb(232,232,232)">
         <text style="font-weight: bold;">评论区</text>
       </view>
       
  <view>
    <block wx:for="{{$commentsComponent$myComments}}" wx:for-index="$commentsComponent$index" wx:for-item="$commentsComponent$item" wx:key="$commentsComponent$index">
     <view style="padding:5px 0;display:flex;align-items:center;border-bottom:1px solid rgb(232,232,232)">
       <view class="center" style="flex:1">
         <image src="{{$commentsComponent$item.avatarUrl}}" style="width:50px; height:50px; border-radius: 100%"/>
       </view>
       <view class="center" style="flex-direction:column;align-items:flex-start; flex:4">
         <view style="font-size:12px;opacity:0.8;padding-bottom:5px;">
           <text>{{$commentsComponent$item.nickName}}</text>
           <image src="{{$commentsComponent$item.gender == 'male' ? '../assets/img/male.png' : '../assets/img/female.png'}}" style="padding:0 10px;width:10px; height:10px;"/>
           <text>{{$commentsComponent$item.age}}</text>
           <view>
             <text>{{$commentsComponent$item.createdAt}}</text>
           </view>
         </view>
         <view style="font-size:15px;opacity:0.6;">
           <text>{{$commentsComponent$item.msg}}</text>
         </view>
       </view>
       <view style="flex:1;display:flex;">
         <image src="../assets/img/like.png" style="width:20px; height:20px;"/>
         <text style="align-self:center;font-size:12px; opacity:0.5; padding-left:5px;">{{$commentsComponent$item.likeNum}}</text>
       </view>
     </view>
    </block>
  </view>

     </view>
     <view style="width:100%; height:50px;"/>
  </view>