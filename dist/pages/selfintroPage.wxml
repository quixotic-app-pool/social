
  <view class="container">
    <view class="center" catchtap="toggle" style="z-index:10;position:fixed; bottom:0; width:100%;height:50px;background-color:#CE452F;" data-wpytoggle-a="">
      <view style="color:white;">
        {{editMode ? '保存': '编辑'}}
      </view>
    </view>
    <swiper  wx:if="{{!editMode}}" style="width: {{screenWidth}}px; height: {{screenWidth}}px;" indicator-dots="true" autoplay="false" interval="5000" duration="1000">
      <block wx:for="{{imgUrls}}" wx:for-index="index" wx:for-item="item" wx:key="index">
        <swiper-item>
          <image style="width: {{screenWidth}}px; height: {{screenWidth}}px;" src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
    <view  wx:if="{{editMode}}" style="width: {{screenWidth}}px; height: {{screenWidth}}px;">
      <view style="display:flex;flex-wrap:wrap;">
        <view class="center" style="border-right:1px solid white;border-bottom:1px solid white;background-color:rgb(229, 229, 229);width:{{screenWidth*2/3 - 1}}px; height: {{screenWidth*2/3 - 1}}px">
          <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
        </view>

        <view style="display:flex; flex-direction:column;">
          <view class="center" style="border-bottom:1px solid white;background-color:rgb(229, 229, 229);width:{{screenWidth*1/3 -1}}px; height: {{screenWidth*1/3 - 1}}px">
            <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
          </view>
          <view class="center" style="border-bottom:1px solid white;background-color:rgb(229, 229, 229);width:{{screenWidth*1/3 -1}}px; height: {{screenWidth*1/3 -1 }}px">
            <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
          </view>
        </view>

        <view class="center">
          <view class="center" style="border-right:1px solid white;background-color:rgb(229, 229, 229);width:{{screenWidth*1/3-1}}px; height: {{screenWidth*1/3 - 1}}px">
            <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
          </view>
          <view class="center" style="border-right:1px solid white;background-color:rgb(229, 229, 229);width:{{screenWidth*1/3-1}}px; height: {{screenWidth*1/3 -1 }}px">
            <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
          </view>
          <view class="center" style="background-color:rgb(229, 229, 229);width:{{screenWidth*1/3-1}}px; height: {{screenWidth*1/3 -1 }}px">
            <image src="../assets/img/choose-image2.png" style="width:40px; height:40px;"/>
          </view>
        </view>
      </view>
      <!-- <image src='../assets/img/choose-image.png' style="width:{{screenWidth*2/3}}px; height: {{screenWidth*2/3}}px"/> -->
    </view>

    <view wx:if="{{!editMode}}" style="width: {{screenWidth}}px;">
      <view style="padding: 10px;">
        <view style="color:rgb(193,89,76)">王小猴</view>
        <view style="display: flex;font-size:15px;">
          <view class="between" style="padding:0 2px; border-radius:4px; width:30px; background-color: rgb(242,195,245)">
            <image src="../assets/img/female.png" style="width:10px; height:10px;"/>
            <text style="color:white;">25</text>
          </view>
          <view class="center" style="margin-left:5px; padding:0 2px; border-radius: 4px; background-color:rgb(245, 115, 0	)">
            <text style="font-size:12px; color:white;">天蝎座</text>
          </view>
        </view>
        <view style="padding: 6px 0; opacity:0.6; font-size:12px;">
          2km, 1分钟前活跃
        </view>
      </view>
    </view>

    <view wx:if="{{editMode}}" catchtap="goEdit" style="width: {{screenWidth}}px;" data-wpygoedit-a="person">
      <view class="between" style="padding: 10px;">
        <view class="center" style="justify-content:flex-start;">
          <text>王小猴,</text>
          <text style="padding:0 5px;">25,</text>
          <image src="../assets/img/female.png" style="width:20px; height:20px;"/>
        </view>
        <image src="../assets/img/right-arrow.png" style="opacity:0.5; width:20px; height:20px;"/>
      </view>
    </view>

    <view wx:if="{{!editMode}}" style="width: {{screenWidth}}px;border-top:1px solid rgb(232,232,232);border-bottom:1px solid rgb(232,232,232);">
      <view class="between" style="padding: 10px;">
        <view class="center">
          <image src="../assets/img/album.png" style="width:30px; height:30px;"/>
          <view style="padding-left:5px; font-size:15px; opacity:0.8;">个人相册</view>
        </view>
        <view class="center">
          <view class="center">
            <block wx:for="{{imgUrls}}" wx:for-index="index" wx:for-item="item" wx:key="index">
             <image style="padding-right:5px; width: 50px; height: 50px;" src="{{item}}" class="slide-image"/>
            </block>
          </view>
          <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:30px; height:30px;"/>
        </view>
      </view>
    </view>

    <view style="width: {{screenWidth}}px;">
      <view style="background-color:rgb(245, 244,	240);display:flex; align-items:flex-end;padding: 0 10px; height:70px; opacity:0.6;border-bottom:1px solid rgb(232,232,232);">
        <text style="padding-bottom:10px;">我的信息</text>
      </view>
      <view style="border-bottom:1px solid rgb(232,232,232);">
        <block wx:for="{{myInfo}}" wx:for-index="index" wx:for-item="item" wx:key="index">
         <view wx:if="{{item.title == '星座'&&!editMode || item.title != '星座'}}" catchtap="goEdit" class="between" style="margin:0 10px;border-bottom:{{myInfo.length == index + 1 ? '' : '1px solid rgb(232,232,232)'}}" data-wpygoedit-a="{{item.title}}">
           <view class="center" style="flex:7;opacity:0.6; height:60px;justify-content:flex-start;">
             <text style="flex:3;">{{item.title}}</text>
             <text style="flex:7;">{{item.value}}</text>
           </view>
           <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
             <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
           </view>
         </view>
        </block>
      </view>
    </view>

    <view style="width: {{screenWidth}}px;">
      <view style="background-color:rgb(245, 244,	240);display:flex; align-items:flex-end;padding: 0 10px; height:70px; opacity:0.6;border-bottom:1px solid rgb(232,232,232);">
        <text style="padding-bottom:10px;">我的标签</text>
      </view>
      <view catchtap="goEdit" style="display:flex;padding:10px 0;" data-wpygoedit-a="tag">
        <view style="flex:1;" class="center">
          <image src="../assets/img/hash.png" style="width:30px; height:30px;"/>
        </view>
        <view style="flex: 7; display: flex;flex-wrap:wrap;padding-right:10px;">
          <block wx:for="{{myTags}}" wx:for-index="index" wx:for-item="item" wx:key="index">
           <view style="margin:3px;; padding:0 4px; background-color: rgb(177, 175, 179); border-radius: 4px;">
             <text style="color:rgb(64, 74, 98)">{{item}}</text>
           </view>
          </block>
        </view>
        <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
          <image src="../assets/img/right-arrow.png" style="padding-right:10px;opacity:0.5;width:20px; height:20px;"/>
        </view>
      </view>
    </view>

    <view style="width: {{screenWidth}}px;border:1px solid rgb(232,232,232)">
      <view style="background-color:rgb(245, 244,	240);display:flex; align-items:flex-end;padding: 0 10px; height:70px; opacity:0.6;border-bottom:1px solid rgb(232,232,232);">
        <text style="padding-bottom:10px;">我的兴趣</text>
      </view>
      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="sports">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/sports.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7; border-bottom:1px solid rgb(232,232,232);">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest1}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(205, 233, 214); border-radius: 4px;">
                 <text style="color:rgb(43, 91, 61)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>
      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="music">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/music.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7; border-bottom:1px solid rgb(232,232,232);">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest2}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(178,186,219); border-radius: 4px;">
                 <text style="color:rgb(63,77,161)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>

      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="food">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/food.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7; border-bottom:1px solid rgb(232,232,232);">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest3}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(241,170,160); border-radius: 4px;">
                 <text style="color:rgb(173,72,56)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>

      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="tv">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/tv.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7; border-bottom:1px solid rgb(232,232,232);">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest4}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(200,197,224); border-radius: 4px;">
                 <text style="color:rgb(80,75,114)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>

      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="book">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/book.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7; border-bottom:1px solid rgb(232,232,232);">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest5}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(253,238,186); border-radius: 4px;">
                 <text style="color:rgb(184,157,71)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>

      <view catchtap="goEdit" style="display:flex;" data-wpygoedit-a="place">
        <view style="display:flex; padding:0 10px;width:100%;">
          <view style="flex:1;" class="center">
            <image src="../assets/img/flight.png" style="width:30px; height:30px;"/>
          </view>
          <view class="between" style="flex: 7;">
            <view style="padding:10px 0;flex: 7; display: flex;flex-wrap:wrap;">
              <block wx:for="{{myInterest6}}" wx:for-index="index" wx:for-item="item" wx:key="index">
               <view style="margin:3px;; padding:0 4px; background-color: rgb(209,220,224); border-radius: 4px;">
                 <text style="color:rgb(75,111,138)">{{item}}</text>
               </view>
              </block>
            </view>
            <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
              <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
            </view>
          </view>
        </view>
      </view>
    </view>

    <view style="width: {{screenWidth}}px; margin-bottom:30px;">
      <view style="background-color:rgb(245, 244,	240);display:flex; align-items:flex-end;padding: 0 10px; height:70px; opacity:0.6;border-bottom:1px solid rgb(232,232,232);">
        <text style="padding-bottom:10px;">我的问答</text>
      </view>
      <view style="box-sizing:border-box;padding:0 10px;width:100%;">
        <block wx:for="{{myAns}}" wx:for-index="index" wx:for-item="item" wx:key="index">
         <view catchtap="goEdit" class="between" style="border-bottom:1px solid rgb(232,232,232)" data-wpygoedit-a="question">
           <view>
             <view style="padding-top: 5px;opacity:0.8;">
               <text>{{item.title}}</text>
             </view>
             <view style="padding: 5px 0;opacity:0.6;">
               <text>{{item.value}}</text>
             </view>
           </view>
           <view wx:if="{{editMode}}" class="center" style="justify-content:flex-end;flex:1;">
             <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
           </view>
         </view>
        </block>

        <view wx:if="{{editMode}}" catchtap="goEdit" class="between" style="height:60px;border-bottom:1px solid rgb(232,232,232)" data-wpygoedit-a="newQuestion">
          <view class="center" style="justify-content: flex-start;">
            <image src="../assets/img/plus.png" style="width:30px; height:30px;"/>
            <view class="center" style="padding-left:5px;opacity:0.6;">
              <text>添加问题</text>
            </view>
          </view>
          <view class="center" style="justify-content:flex-end;flex:1;">
            <image src="../assets/img/right-arrow.png" style="opacity:0.5;width:20px; height:20px;"/>
          </view>
        </view>

      </view>
    </view>
    <view style="height:30px;"/>
  </view>